@using ForumNet.Web.Infrastructure.Extensions
@model ForumNet.Web.ViewModels.Users.UsersDetailsViewModel
@{
    ViewData["Title"] = Model.UserName;
}

<div class="tt-wrapper-section">
    <div class="container">
        <div class="tt-user-header">
            <div class="tt-col-avatar">
                <div class="tt-icon">
                    <svg class="tt-icon">
                        <use xlink:href="@Model.ProfilePicture"></use>
                    </svg>
                </div>
            </div>
            <div class="tt-col-title">
                <div class="tt-title">
                    <a asp-area="" asp-controller="Users" asp-action="Threads" asp-route-id="@Model.Id">@Model.UserName</a>
                </div>
                <ul class="tt-list-badge">
                    <li><a href="#"><span class="tt-color14 tt-badge">LVL : @Model.Level</span></a></li>
                </ul>
            </div>
            @if (Model.Id != this.User.GetId())
            {
                <vc:users-follow-button user-id="@Model.Id"></vc:users-follow-button>
            }
        </div>
    </div>
</div>
<div class="container">
    <div class="tt-tab-wrapper">
        <vc:users-details user-id="@Model.Id"></vc:users-details>
        <div class="tab-pane tt-indent-none show active" id="tt-tab-04" role="tabpanel">
            @if (Model.Followers.Any())
            {
                <div class="tt-followers-list">
                    <div class="tt-list-header">
                        <div class="tt-col-name">User</div>
                        <div class="tt-col-value-large hide-mobile">Threads</div>
                        <div class="tt-col-value-large hide-mobile">Replies</div>
                        <div class="tt-col-value">Level</div>
                    </div>
                    @foreach (var follower in Model.Followers)
                    {
                        <div class="tt-item">
                            <div class="tt-col-merged">
                                <div class="tt-col-avatar">
                                    <svg class="tt-icon">
                                        <use xlink:href="@follower.ProfilePicture"></use>
                                    </svg>
                                </div>
                                <div class="tt-col-description">
                                    <h6 class="tt-title">
                                        <a asp-area="" asp-controller="Users" asp-action="Threads" asp-route-id="@follower.Id">
                                            @follower.UserName
                                        </a>
                                    </h6>
                                </div>
                            </div>
                            <div class="tt-col-value-large hide-mobile">@follower.ThreadsCount</div>
                            <div class="tt-col-value-large hide-mobile">@follower.RepliesCount</div>
                            <div class="tt-col-value"><span class="tt-color16 tt-badge">LVL : @follower.Level</span></div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="tt-layout-404">
                    <h6 class="tt-title">@Model.UserName has no followers.</h6>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function follow(id) {
            $.ajax({
                type: "POST",
                url: "/Users/Follow/" + id,
                success: function (json) {
                    if (json == true) {
                        $('#follow-button').html('Following');
                    } else {
                        $('#follow-button').html('Follow');
                    }
                }
            });
        }
    </script>
}
