@using ForumNet.Web.Infrastructure.Extensions
@using ForumNet.Web.ViewModels.Messages
@model MessagesCreateViewModel
@{
    ViewData["Title"] = "New message";
}

<div class="container">
    <div class="tt-messages-layout">
        <div class="row no-gutters">
            <div class="col-md-4 tt-aside" id="js-aside">
                <a href="#" class="tt-title-aside">
                    <h2 class="tt-title">
                        Messages
                    </h2>
                    <i class="tt-icon">
                        <svg class="icon">
                            <use xlink:href="#icon-pencil"></use>
                        </svg>
                    </i>
                </a>
                <div class="tt-all-avatar">
                    <div class="tt-list-avatar js-init-scroll">
                        @if (Model.All.Any())
                        {
                            foreach (var conversation in Model.All)
                            {
                                <a onclick="location.href = '/Messages/WithUser/@conversation.Id';" href="#" class="tt-item">
                                    <div class="tt-col-avatar">
                                        <svg class="tt-icon">
                                            <use xlink:href="@conversation.ProfilePicture"></use>
                                        </svg>
                                    </div>
                                    <div class="tt-col-description">
                                        <h4 class="tt-title"><span>@conversation.UserName</span> <span class="time">@conversation.CreatedOn</span></h4>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <div class="tt-layout-404">
                                <p>
                                    You don't have any messages<br />
                                    But you can <a href="#" class="tt-color-dark tt-underline-02">send</a> one now.
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tt-title-content">
                    <a href="#" class="tt-toggle-aside">
                        <i class="tt-icon">
                            <svg class="icon">
                                <use xlink:href="#icon-arrow_left"></use>
                            </svg>
                        </i>
                    </a>
                    <h2 class="tt-title">
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="tt-title-content">
                    <div class="col-md-4">
                        <div class="form-group">
                            <h2 class="tt-title">To:</h2>
                            <select asp-for="ReceiverId" id="input-user">
                                @foreach (var user in Model.Users.Where(u => u.Id != this.User.GetId()))
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                            <span asp-validation-for="ReceiverId"></span>
                        </div>
                    </div>
                </div>

                <partial name="_SendPartial" model="new MessagesSendInputModel { ReceiverId = Model.ReceiverId }" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#input-user').on('change', function () {
            var valueSelected = this.value;
            $("#addMessageForm input[name='ReceiverId']").val(valueSelected);
        });
        var $select = $('#input-user').selectize({
            create: false,
            sortField: 'text',
            placeholder: 'Type a name...'
        });
        $select.each(function () {
            $(this)[0].selectize.clear(true);
        });
    </script>
}