@model ForumNet.Web.ViewModels.Posts.PostsEditViewModel
@{
    ViewData["Title"] = "Edit Post";
}

<div class="container">
    <div class="tt-wrapper-inner">
        <br />
        <h1 class="tt-title-border">
            @ViewData["Title"]
        </h1>
        <form class="form-default form-create-topic" asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title">Post Title</label>
                <div class="tt-value-wrapper">
                    <input asp-for="Title" type="text" class="form-control" id="inputTopicTitle" placeholder="Subject of your post">
                    <span class="tt-value-input">100</span>
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="tt-note">Describe your post well, while keeping the subject as short as possible.</div>
            </div>
            <div class="pt-editor">
                <h6 class="pt-title">Post Description</h6>
                <div class="form-group">
                    <textarea id="post-edit" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" id="input-category">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="TagIds">Tags</label>
                            <select asp-for="TagIds" id="input-tags">
                                @foreach (var tag in Model.Tags)
                                {
                                    <option value="@tag.Id">@tag.Name</option>
                                }
                            </select>
                            <span asp-validation-for="TagIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-auto ml-md-auto">
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-width-lg">Back</a>
                        <button type="submit" class="btn btn-secondary btn-width-lg">Edit Post</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var $select = $('#input-category').selectize({
            create: false,
            sortField: 'text',
            placeholder: 'Please select...'
        });
        $('#input-tags').selectize({
            plugins: ['remove_button', 'restore_on_backspace'],
            delimiter: ',',
            persist: false,
            create: false
        });
        tinymce.init({
            selector: '#post-edit',
            height: 400,
            plugins: [
                'lists advlist link autolink image media preview hr anchor',
                'code codesample paste',
                'table emoticons help'
            ],
            toolbar: [
                'undo redo | styleselect fontsizeselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent bullist numlist |',
                'forecolor backcolor emoticons | link image media codesample preview | help'
            ],
            link_default_protocol: "https",
            menubar: 'file edit view insert format table'
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
