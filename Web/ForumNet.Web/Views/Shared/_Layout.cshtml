<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - Forum.NET</title>
    <meta name="description" content="Forum.NET">
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/favicon/favicon.ico">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- tt-mobile menu -->
    <nav class="panel-menu" id="mobile-menu">
        <ul>
        </ul>
        <div class="mm-navbtn-names">
            <div class="mm-closebtn">
                Close
                <div class="tt-icon">
                    <svg>
                        <use xlink:href="#icon-cancel"></use>
                    </svg>
                </div>
            </div>
            <div class="mm-backbtn">Back</div>
        </div>
    </nav>
    <header id="tt-header">
        <div class="container">
            <div class="row tt-row no-gutters">
                <div class="col-auto">
                    <!-- toggle mobile menu -->
                    <a class="toggle-mobile-menu" href="#">
                        <svg class="tt-icon">
                            <use xlink:href="#icon-menu_icon"></use>
                        </svg>
                    </a>
                    <!-- /toggle mobile menu -->
                    <!-- logo -->
                    <div class="tt-logo">
                        <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=""></a>
                    </div>
                    <!-- /logo -->
                    <!-- desktop menu -->
                    <div class="tt-desktop-menu">
                        <nav>
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index"><span>Home</span></a></li>
                                <li><a asp-controller="Categories" asp-action="All"><span>Categories</span></a></li>
                                <li><a asp-controller="Posts" asp-action="Trending"><span>Trending</span></a></li>
                                @if (this.User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Posts" asp-action="New"><span>New</span></a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <!-- /desktop menu -->
                    <!-- tt-search -->
                    <div class="tt-search">
                        <form class="search-wrapper">
                            <div class="search-form">
                                <input type="text" class="tt-search__input" placeholder="Search...">
                                <button class="tt-search__btn" type="submit">
                                    <svg class="tt-icon">
                                        <use xlink:href="#icon-search"></use>
                                    </svg>
                                </button>
                                <button class="tt-search__close">
                                    <svg class="tt-icon">
                                        <use xlink:href="#cancel"></use>
                                    </svg>
                                </button>
                            </div>
                        </form>
                    </div>
                    <!-- /tt-search -->
                </div>
                @if (!this.User.Identity.IsAuthenticated)
                {
                    <div class="col-auto ml-auto">
                        <div class="tt-account-btn">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Log in</a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Sign up</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-auto ml-auto">
                        <div class="tt-user-info d-flex justify-content-center">
                            <a href="#" class="tt-btn-icon">
                                <i class="tt-icon"><svg><use xlink:href="#icon-notification"></use></svg></i>
                            </a>
                            <div class="tt-avatar-icon tt-size-md">
                                <i class="tt-icon"><svg><use xlink:href="#icon-ava-a"></use></svg></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto ml-auto">
                        <div class="tt-account-btn">
                            <a asp-area="Identity" asp-page="/Account/Logout" class="btn btn-primary">Logout</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </header>

    <main id="tt-pageContent" class="tt-offset-small">
        @RenderBody()
    </main>

    <a asp-controller="Posts" asp-action="New" class="tt-btn-create-topic">
        <span class="tt-icon">
            <svg>
                <use xlink:href="#icon-create_new"></use>
            </svg>
        </span>
    </a>

    <script src="~/js/bundle.js"></script>
    <partial name="_LayoutPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>