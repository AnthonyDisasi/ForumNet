@model ForumNet.Web.ViewModels.Categories.CategoriesCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="tt-title-border">
    Create New Category
</h1>
<div class="row">
    <div class="col-md-4">
        <form class="form-default" asp-area="Administration" asp-controller="Categories" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="tt-value-wrapper">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Administration" asp-controller="Categories" asp-action="All" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
