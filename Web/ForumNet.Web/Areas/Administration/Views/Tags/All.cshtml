@using ForumNet.Web.Infrastructure.Extensions
@model ForumNet.Web.ViewModels.Tags.TagsAllViewModel
@{
    ViewData["Title"] = "Tags";
}

<br />
<div class="tt-custom-mobile-indent container">
    <div class="tt-categories-title">
        <div class="tt-title">@ViewData["Title"]</div>
        <a asp-area="Administration" asp-controller="Tags" asp-action="Create" class="btn btn-secondary ml-auto"><i class="fas fa-plus"></i></a>
        &nbsp;
        <div class="tt-search">
            <form class="search-wrapper" asp-area="Administration" asp-controller="Tags" asp-action="All" method="get">
                <div class="search-form">
                    <input type="text" asp-for="Search" class="tt-search__input" placeholder="Search Tags">
                    <button class="tt-search__btn" type="submit">
                        <svg class="tt-icon">
                            <use xlink:href="#icon-search"></use>
                        </svg>
                    </button>
                    <button class="tt-search__close">
                        <svg class="tt-icon">
                            <use xlink:href="#icon-cancel"></use>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="tt-categories-list">
        <div class="row">

            @foreach (var tag in Model.Tags)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="tt-item">
                        <div class="tt-item-header">
                            <ul class="tt-list-badge">
                                <li>
                                    <a asp-area="" asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id">
                                        <span class="tt-badge">@tag.Name</span>
                                    </a>
                                </li>
                            </ul>
                            <h6 class="tt-title">
                                <a asp-area="" asp-controller="Tags" asp-action="Details" asp-route-id="@tag.Id">Threads - @tag.PostsCount</a>
                            </h6>
                        </div>
                        <hr />
                        <div class="tt-item-layout">
                            <form asp-area="Administration" asp-controller="Tags" asp-action="Delete" asp-route-id="@tag.Id" method="post" class="btn">
                                <button type="submit" class="btn btn-secondary"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
